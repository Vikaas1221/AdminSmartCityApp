<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/first_layout"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Complaint ID: "
                android:textColor="#FF5722"
                android:layout_margin="@dimen/_3sdp"
                android:id="@+id/request"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="2345"
                android:textColor="#FF5722"
                android:id="@+id/requestID"
                android:layout_toRightOf="@+id/request"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_margin="@dimen/_3sdp"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/first_layout"
                android:id="@+id/second_layout"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Description:"
                    android:layout_margin="@dimen/_3sdp"
                    android:textStyle="bold"
                    android:layout_below="@+id/category_type"
                    android:id="@+id/Description_t"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/_15sdp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/description_type"
                    android:layout_margin="@dimen/_3sdp"
                    android:text="axdfgh"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/_15sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/second_layout"
                android:id="@+id/third_layout"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Address:"
                    android:layout_margin="@dimen/_3sdp"
                    android:textStyle="bold"
                    android:id="@+id/Address_t"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/_15sdp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/address_type"
                    android:layout_margin="@dimen/_3sdp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/_15sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/third_layout"
                android:id="@+id/forth_layout"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Date:"
                    android:layout_margin="@dimen/_3sdp"
                    android:textStyle="bold"
                    android:id="@+id/Date_t"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/_15sdp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/date_type"
                    android:layout_margin="@dimen/_3sdp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/_15sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/forth_layout"
                android:id="@+id/fifith_layout"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Action:"
                    android:layout_margin="@dimen/_3sdp"
                    android:textStyle="bold"
                    android:id="@+id/Action_t"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/_15sdp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/action_type"
                    android:layout_margin="@dimen/_3sdp"
                    android:text="No Action"
                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/_15sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/fifith_layout"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:text="Add Action"
                    android:id="@+id/add_action"
                    android:textColor="@android:color/white"
                    android:background="@drawable/buttondesign"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_width="wrap_content"
                    android:text="Close Complaint"
                    android:id="@+id/closeComplaint"
                    android:textColor="@android:color/white"
                    android:background="@drawable/buttondesign"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>